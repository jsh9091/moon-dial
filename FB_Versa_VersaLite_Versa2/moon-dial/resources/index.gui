<svg>
  <rect id="background" />

  <gradientRect x="0" y="0" width="100%" height="100"
    gradient-type="linear"
    gradient-x1="0" gradient-y1="0"
    gradient-x2="0" gradient-y2="100%"
    gradient-color1="black" gradient-color2="#003161" />

  <gradientRect x="0" y="100" width="100%" height="100"
    gradient-type="linear"
    gradient-x1="0" gradient-y1="50%"
    gradient-x2="0" gradient-y2="100%"
    gradient-color1="#003161" gradient-color2="#000B58" />

  <gradientRect x="0" y="200" width="100%" height="35"
    gradient-type="linear"
    gradient-x1="0" gradient-y1="0"
    gradient-x2="0" gradient-y2="100%"
    gradient-color1="#000B58" gradient-color2="black" />

  <text id="stepCountLabel" />
  <image id="stepsIcon" href="steps.png" />

  <text id="batteryLabel" />
  <image id="batteryIcon" href="battery-full.png" />

  <image id="moonIcon" />
  <text id="moonPaseLabel" />

  <text id="timeShadow" opacity="1.0" />
  <text id="timeLabel" />
  
  <text id="dayOfWeekLabel" />
  <text id="monthLabel" />
  <text id="dayOfMonthLabel" />

  <g id="dialgroup" pointer-events="visible" transform="translate(50%, 100%)">
    <image id="dial" href="dial.png" x="$-150" y="$-150" width="300" height="300"/> 
    <animateTransform attributeType="rotate" from="0" to="360" begin="click" dur="1" />
  </g>

  <!--forground circles for moons on dialog to disapear behind-->
  <mask id="mask">
    <!--circles to be displayed-->
    <circle cx="27%" cy="303" r="53" />
    <circle cx="75%" cy="303" r="53" />
  </mask>
    <!--gradient to be masked off by circles-->
   <svg mask="#mask" width="100%" height="100%">
      <gradientRect  x="0" y="249" width="100%" height="51"
        gradient-type="linear"
        gradient-x1="0" gradient-y1="0"
        gradient-x2="0" gradient-y2="95%"
        gradient-color1="#003161" gradient-color2="black" />
  </svg>
</svg>